{
  "output_folder": "results",
  "src_folders": ["tests"],
  "webdriver": {
    "start_process": true,
    "server_path": "/usr/bin/chromedriver",
    "port": 9515,
    "cli_args": [
      "--verbose",
      "--whitelisted-ips="
    ]
  },
  "test_settings": {
    "default": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "acceptSslCerts": true,
        "acceptInsecureCerts": true,
        "chromeOptions": {
          "args": ["window-size=1680,1000", "headless", "no-sandbox"]
        }
      }
    }
  }
}
